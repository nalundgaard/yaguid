{erl_opts, [inline_list_funcs,
            warn_deprecated_function,
            warn_export_vars,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_unused_function,
            warn_unused_import,
            warnings_as_errors,
            debug_info]}.

{xref_checks, [fail_on_warning,
               undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls,
               deprecated_functions]}.

{dialyzer, [{warnings, [error_handling,
                        race_conditions,
                        unmatched_returns,
                        unknown,
                        no_improper_lists]}]}.

{validate_app_modules, true}.

{profiles, [{test, [{deps, [meck]},
                    {erl_opts, [export_all, debug_info]}]}]}.

{eunit_opts, [verbose]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{shell, [
    {config, "config/shell.config"},
    {apps, [yaguid]}
]}.
